   namespace 'gui'

   mGfx ?= mod.load('display')

   gui.dialog ?= { }

BTNSIZE    = 20
BTNGAP     = 3
WIDGET_GAP = 6
COL_BORDER = { r=0, g=0, b=0, a=160 }

COMMON = array<string> {
  '0,64,64', '0,128,128', '0,192,192', '0,255,255', '64,255,255',  '128,255,255', '192,255,255', '224,255,255', -- Aqua
  '0,64,0',  '0,128,0',   '0,192,0',   '0,255,0',   '64,255,64',   '128,255,128', '192,255,192', '224,255,224', -- Green
  '64,64,0', '128,128,0', '192,192,0', '255,255,0', '255,255,64',  '255,255,128', '255,255,192', '255,255,224', -- Yellow
  '64,0,0',  '128,0,0',   '192,0,0',   '255,0,0',   '255,64,64',   '255,128,128', '255,192,192', '255,224,224', -- Red
  '64,0,64', '128,0,128', '192,0,192', '255,0,255', '255,64,255',  '255,128,255', '255,192,255', '255,224,255', -- Purple
  '0,0,64',  '0,0,128',   '0,0,192',   '0,0,255',   '64,64,255',   '128,128,255', '192,192,255', '224,224,255', -- Blue
  '0,0,0',   '32,32,32',  '64,64,64',  '96,96,96',  '128,128,128', '160,160,160', '192,192,192', '255,255,255'  -- Grey
}

local glRainbowBitmap

----------------------------------------------------------------------------------------------------------------------

function saveColours(self)
   self._paletteChanged ?? return

   output = json.encode(self._userColours)
   if output?? then
      try
         save_file = obj.new('file', { path='user:config/colours.json', flags=FL_NEW|FL_WRITE })
         save_file.acWrite(output)
      except ex
         msg('Failed to save custom colour table: ' .. ex.message)
      end
   end
end

----------------------------------------------------------------------------------------------------------------------

function updateRGBInput(self, RGB:table)
   RGB ?? return
   self._rgb = RGB
   if self.vecChosenColour then
      self.vecChosenColour.fill = gui.rgbToSVG(self._rgb)
   end
   self.inputRGB.text.string = (self._rgb.r ?? 0) .. ',' .. (self._rgb.g ?? 0) .. ',' .. (self._rgb.b ?? 0)
   self.viewport.acDraw()
end

----------------------------------------------------------------------------------------------------------------------

function refreshColourNodes(self)
   for idx, node in ipairs(self._colourNodes) do
      rgb = self._userColours?[idx] ?? { }

      rgb.r ?= 255
      rgb.g ?= 255
      rgb.b ?= 255
      rgb.a ?= 255

      node.fill = gui.rgbToSVG(rgb)
   end
end

----------------------------------------------------------------------------------------------------------------------

function getRainbowBitmap()
   if glRainbowBitmap then return glRainbowBitmap end

   size = ((BTNSIZE + BTNGAP) * 7) - BTNGAP
   glRainbowBitmap = obj.new('bitmap', { width=size, height=size, bitsPerPixel=32 })

   val = glRainbowBitmap.height / 2
   for y=0, (glRainbowBitmap.height / 2) - 1 do
      s = 1 - (val / (glRainbowBitmap.height / 2))
      v = 1
      for x=0, glRainbowBitmap.width-1 do
         h = x * 6 / glRainbowBitmap.width
         i = math.floor(h)
         f = h - i
         if (i & 1) is 0 then
            f = 1 - f
         end
         m = v * (1 - s)
         n = v * (1 - s * f)

         rgb = choose i from
            1 -> [_*]glRainbowBitmap.mtGetColour(n * 255, v * 255, m * 255, 255)
            2 -> [_*]glRainbowBitmap.mtGetColour(m * 255, v * 255, n * 255, 255)
            3 -> [_*]glRainbowBitmap.mtGetColour(m * 255, n * 255, v * 255, 255)
            4 -> [_*]glRainbowBitmap.mtGetColour(n * 255, m * 255, v * 255, 255)
            5 -> [_*]glRainbowBitmap.mtGetColour(v * 255, m * 255, n * 255, 255)
            else -> [_*]glRainbowBitmap.mtGetColour(v * 255, n * 255, m * 255, 255)
         end

         mGfx.DrawPixel(glRainbowBitmap, x, y, rgb)
      end
      val -= 1
   end

   val = glRainbowBitmap.height / 2
   for y=glRainbowBitmap.height/2, glRainbowBitmap.height-1 do
      s = val / (glRainbowBitmap.height / 2)
      v = val / (glRainbowBitmap.height / 2)
      for x=0, glRainbowBitmap.width-1 do
         h = x * 6.0 / glRainbowBitmap.width
         i = math.floor(h)
         f = h - i
         if (i & 1) is 0 then
            f = 1 - f
         end
         m = v * (1 - s)
         n = v * (1 - s * f)

         rgb = choose i from
            1 -> [_*]glRainbowBitmap.mtGetColour(n * 255, v * 255, m * 255, 255)
            2 -> [_*]glRainbowBitmap.mtGetColour(m * 255, v * 255, n * 255, 255)
            3 -> [_*]glRainbowBitmap.mtGetColour(m * 255, n * 255, v * 255, 255)
            4 -> [_*]glRainbowBitmap.mtGetColour(n * 255, m * 255, v * 255, 255)
            5 -> [_*]glRainbowBitmap.mtGetColour(v * 255, m * 255, n * 255, 255)
            else -> [_*]glRainbowBitmap.mtGetColour(v * 255, n * 255, m * 255, 255)
         end

         mGfx.DrawPixel(glRainbowBitmap, x, y, rgb)
      end
      val -= 1
   end

   return glRainbowBitmap
end

