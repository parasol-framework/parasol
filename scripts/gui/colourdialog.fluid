function buildLayout(self, Options)
   self.scene ?? return

   self._links = array<table>

   dx = WIDGET_GAP
   dy = 0

   self.txtBasicColours = self.viewport.new('VectorText', {
      x         = dx,
      y         = dy + gui.getFontHeight(gui.fonts.window),
      string    = 'Basic colours',
      fill      = 'rgba(0,0,0,1)',
      face      = gui.fonts.window.face,
      fontSize  = string.format('%.2fpt', gui.fonts.window.size),
      fontStyle = gui.fonts.window.style,
      align     = 'left'
   })

   dy += gui.getFontHeight(gui.fonts.window) + WIDGET_GAP

   -- Configure an array of 8x6 buttons representing a pre-selected colour palette

   y = dy
   colour = 0
   for row=0, 6 do
      x = WIDGET_GAP - 1
      for col=0, 7 do
         rgb = gui.strToRGB(COMMON[colour])

         vec = self.viewport.new('VectorRectangle', {
            fill   = gui.rgbToSVG(rgb),
            stroke = gui.rgbToSVG(COL_BORDER),
            strokeWidth = 1,
            x      = x,
            y      = y,
            width  = BTNSIZE,
            height = BTNSIZE,
            roundX = 2,
            roundY = 2
         })

         self._links:push({
            vector=vec, x=x, y=y, width=BTNSIZE, height=BTNSIZE, colour=rgb,
            routine = function(Link)
               updateRGBInput(self, Link.colour)
            end
         })

         x += BTNSIZE + BTNGAP
         colour++
      end
      y += BTNSIZE + BTNGAP
   end

   dy = y + BTNGAP

   -- Configure an array of 8x2 user customised colours

   self.txtPersonalColours = self.viewport.new('VectorText', {
      x         = dx,
      y         = dy + gui.getFontHeight(gui.fonts.window),
      string    = 'Personal colours',
      fill      = 'rgba(0,0,0,1)',
      face      = gui.fonts.window.face,
      fontSize  = string.format('%.2fpt', gui.fonts.window.size),
      fontStyle = gui.fonts.window.style,
      align     = 'left'
   })

   self._colourNodes = array<any>

   dy += gui.getFontHeight(gui.fonts.window) + WIDGET_GAP
   y = dy
   ci = 0
   for row=1, 2 do
      x = dx
      for column=1, 7 do
         rgb = self._userColours?[ci] ?? { r=255, g=255, b=255, a=255 }
         rgb.r ?= 255
         rgb.g ?= 255
         rgb.b ?= 255
         rgb.a ?= 255

         vec = self.viewport.new('VectorRectangle', {
            fill   = gui.rgbToSVG(rgb),
            stroke = gui.rgbToSVG(COL_BORDER),
            strokeWidth = 1,
            x      = x,
            y      = y,
            width  = BTNSIZE,
            height = BTNSIZE,
            roundX = 2,
            roundY = 2
         })

         self._colourNodes:push(vec)
         index = (((row-1) * 7) + column) - 1
         self._links:push({ vector=vec, x=x, y=y, width=BTNSIZE, height=BTNSIZE, colour=rgb, index=index,
            routine = function(Link)
               if self._userColours?[index] then updateRGBInput(self, self._userColours[index]) end
            end
         })

         x += BTNSIZE + BTNGAP
         ci++
      end

      -- Add buttons for the adding and removing of personal colours

      if row is 1 then
         gui.icon({
            target = self.viewport, x = x+2, y = y, size = BTNSIZE, image = 'items/add',
            events = {
               activate = function(Icon)
                  if self._userColours:any(col => ((col.r is self._rgb.r) and (col.g is self._rgb.g) and (col.b is self._rgb.b))) then
                     return
                  end

                  if #self._userColours < 7 * 2 then
                     self._paletteChanged = true
                     self._userColours:push(self._rgb)
                     refreshColourNodes(self)
                     self.viewport.acDraw()
                  else
                     gui.dialog.error('Out of Palette Space', 'You have run out of space for adding new colours to your personal palette.  Please delete some of your existing colours before adding new ones.')
                  end
               end
            }
         })
      elseif row is 2 then
         gui.icon({
            target = self.viewport, x = x+2, y = y, size = BTNSIZE, image = 'items/trash',
            events = {
               activate = function(Icon)
                  for k, col in ipairs(self._userColours) do
                     if (col.r is self._rgb.r) and (col.g is self._rgb.g) and (col.b is self._rgb.b) then
                        self._paletteChanged = true
                        self._userColours:remove(k)
                        refreshColourNodes(self)
                        self.viewport.acDraw()
                        break
                     end
                  end
               end
            }
         })
      end

      y += BTNSIZE + BTNGAP
   end

   bottom = y + WIDGET_GAP

   -- Configure the palette selection area

   dx += ((BTNSIZE + BTNGAP) * 8) + 10
   dy = 0

   self.txtRainbowPalette = self.viewport.new('VectorText', {
      x         = dx,
      y         = dy + gui.getFontHeight(gui.fonts.window),
      string    = 'Rainbow palette',
      fill      = 'rgba(0,0,0,1)',
      face      = gui.fonts.window.face,
      fontSize  = string.format('%.2fpt', gui.fonts.window.size),
      fontStyle = gui.fonts.window.style,
      align     = 'left'
   })

   dy += gui.getFontHeight(gui.fonts.window) + WIDGET_GAP

   rainbow = getRainbowBitmap()

   self.vecRainbowPalette = self.viewport.new('VectorRectangle', {
      x      = dx,
      y      = dy,
      width  = rainbow.width,
      height = rainbow.height,
      roundX = 4,
      roundY = 4,
      stroke = gui.rgbToSVG(COL_BORDER),
      fill   = 'url(#Rainbow)'
   })

   self._rainbowX = dx
   self._rainbowY = dy

   dy += self.vecRainbowPalette.height + WIDGET_GAP

   -- The picker selects colours in the rainbow palette and is only visible if the user activates it.

   self.vecPicker = self.viewport.new('VectorEllipse', {
      cX      = self._rainbowX,
      cY      = self._rainbowY,
      radiusX = 4,
      radiusY = 4,
      visibility = VIS_HIDDEN
   })

   self.vecChosenColour = self.viewport.new('VectorRectangle', {
      x      = dx,
      y      = dy,
      roundX = 4,
      roundY = 4,
      width  = rainbow.width,
      height = 32,
      fill   = gui.rgbToSVG(self._rgb),
      stroke = gui.rgbToSVG(COL_BORDER)
   })

   dy += self.vecChosenColour.height + WIDGET_GAP

   self.inputRGB = gui.input({
      target = self.viewport,
      x      = dx,
      y      = dy,
      width  = rainbow.width,
      label  = 'RGB:',
      inputMask = '^%d+,%d+,%d+$',
      events = {
         activate = function(Widget, Event)
            updateRGBInput(self, gui.strToRGB(Event.text))
         end
      }
   })

   dy += self.inputRGB.viewport.height + WIDGET_GAP

   -- Okay and cancel buttons

   lCancelButton = gui.button({
      target  = self.viewport,
      text    = 'Cancel',
      xOffset = WIDGET_GAP,
      y       = dy,
      icon    = 'items/cancel',
      events = {
         activate = function(Widget)
            self?.feedback(nil)
            table.clear(self)
         end
      }
   })

   lOkayButton = gui.button({
      target  = self.viewport,
      text    = 'OK',
      xOffset = lCancelButton.viewport.width + (WIDGET_GAP * 2),
      y       = dy,
      icon    = 'items/checkmark',
      events = {
         activate = function(Widget)
            saveColours(self)
            self?.feedback(self._rgb.r .. ',' .. self._rgb.g .. ',' .. self._rgb.b)
            table.clear(self)
         end
      }
   })

   dy += lOkayButton.viewport.height + WIDGET_GAP
   if dy > bottom then bottom = dy end

   collectgarbage()

   return (self._rainbowX + rainbow.width + WIDGET_GAP), bottom
end

----------------------------------------------------------------------------------------------------------------------
-- Locate the picker within the rainbow palette, if active

function arrangePicker(self)
   self.vecPicker ?? return

   if self._picker then
      val = (self._picker.y * 255) / (getRainbowBitmap().height * 0.75)
      if val > 255 then val = 255 end

      self.vecPicker.cX = self._rainbowX + self._picker.x
      self.vecPicker.cY = self._rainbowY + self._picker.y

      self.vecPicker.stroke     = 'rgba(' .. val .. ',' .. val .. ',' .. val .. ',1)'
      self.vecPicker.visibility = VIS_VISIBLE
   else
      self.vecPicker.visibility = VIS_HIDDEN
   end
end

----------------------------------------------------------------------------------------------------------------------

function arrangeLayout(self)
   -- Recalculate clickable links

   for link in values(self._links) do
      if link.vector then
         link.x, link.y, link.width, link.height = [_*]link.vector.mtGetBoundary()
      end
   end

   if self.vecRainbowPalette then
      self._rainbow.winX, self._rainbow.winY, self._rainbow.winWidth, self._rainbow.winHeight = [_*]self.vecRainbowPalette.mtGetBoundary()
   end

   arrangePicker(self)
end

----------------------------------------------------------------------------------------------------------------------
-- Executed when the user clicks the rainbow palette area.  Some coordinate translation
-- occurs in order to manage viewport scaling within the display window.

function selectPalette(self, X, Y)
   if X < 0 then X = 0 end
   if Y < 0 then Y = 0 end
   if X >= self._rainbow.winWidth then X = self._rainbow.winWidth - 1 end
   if Y >= self._rainbow.winHeight then Y = self._rainbow.winHeight - 1 end

   rainbow = getRainbowBitmap()
   descaleX, descaleY = (rainbow.width / self._rainbow.winWidth), (rainbow.height / self._rainbow.winHeight)
   dX, dY = X * descaleX, Y * descaleY
   rgb = mGfx.ReadRGBPixel(rainbow, descaleX * X, descaleY * Y)

   self._picker ?= { x=dX, y=dY }

   left, top, right, bottom = self._picker.x - 4, self._picker.y - 4, self._picker.x + 4, self._picker.y + 4

   if dX < self._picker.x then
      left = dX - 4
   else
      right = dX + 4
   end

   if dY < self._picker.y then
      top = dY - 4
   else
      bottom = dY + 4
   end

   self._picker = { x=dX, y=dY }
   arrangePicker(self)
   self.viewport.acDraw()
   updateRGBInput(self, { r=rgb.red, g=rgb.green, b=rgb.blue })
end

----------------------------------------------------------------------------------------------------------------------

function loadColours(self)
   try
      js = file.readAll('user:config/colours.json')
      if js?? then
         self._userColours = json.decode(js)
         if type(self._userColours) != 'array' then
            msg('Invalid colours.json file detected.')
            self._userColours = array<table>
         end
      end
   end
end

