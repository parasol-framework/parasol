@if(imported=false)
   dlg = font.dialog({
      popOver    = arg('popOver'),
      target     = arg('target'),
      modal      = arg('modal'),
      okText     = arg('okText'),
      cancelText = arg('cancelText'),
      icon       = arg('icon')
   })

   return dlg.windowID
@end
