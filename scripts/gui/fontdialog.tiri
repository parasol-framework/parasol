gui.dialog.font = function(Options)
   global mFont <const> ?= mod.load('font')

   self = { -- Public variables
      windowID    = nil,
      face        = 'Noto Sans',
      pointSize   = 12,
      style       = 'Regular',
      compactFace = nil,
      colour      = { r=0, g=0, b=0, a=255 }
   }

   lLongText = [[
