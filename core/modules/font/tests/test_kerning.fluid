
// Kerning test.

   local mFont = mod.load("font")
   local font = obj.new("font", { face="open sans:18", bold=1 } )

   if (font == nil) then
      print("Unable to load font.")
      return
   end

   local strtest = "Embedded Style Tests"

   local width1 = mFont.StringWidth(font, strtest, -1)

   local width2 = 0
   local kchar = 0
   for i=1,strtest:len() do
      local charwidth, kerning = mFont.CharWidth(font, strtest:byte(i), kchar)
      print(charwidth .. " " .. kerning)
      kchar = strtest:byte(i)
      width2 = width2 + charwidth + kerning
   end

   print("StringWidth() returned a width of " .. width1)
   print("CharWidth() returned a aggregated width of " .. width2)

