<?xml version="1.0"?>

<dml type="program">
  <window center title="Proportional Font Test" minwidth="460" minheight="420">

    <surface transparent name="interface[@id]" x="[owner.leftmargin]" y="[owner.topmargin]"
      xoffset="[owner.rightmargin]" yoffset="[owner.bottommargin]">

      <insideborder fill colour="[glStyle./colours/@recess]"/>

      <text x="10" y="10" string="Hello World" face="open sans" point="100%" colour="0,0,0"/>

      <text x="10" y="40" string="Hello World" face="open sans:200%:bold" colour="0,0,0"/>

      <set object="[glStyle]" /interface/fontsize="30"/>
      <text x="10" y="80" string="Hello World" face="open sans" point="100%" colour="0,0,0"/>

    </surface>

  </window>
</dml>
