-- Test binding with 'localhost' string

@Test function BindLocalhostString()
   port = glBasePort + 7
   try
     obj.new('netsocket', { port = port, address = 'localhost', flags = 'SERVER' })
   except ex
      error('Failed to bind to localhost:' .. port)
   end
end

------------------------------------------------------------------------------------------------------------------------
-- Test invalid bind address

@Test function InvalidBindAddress()
   port = glBasePort + 8
   try
      server = obj.new('netsocket', { port = port, address = '999.999.999.999', flags = 'SERVER' })
   success
      error('Unexpectedly succeeded binding to invalid address')
   end
end

------------------------------------------------------------------------------------------------------------------------
-- Test concurrent servers on different addresses

@Test function ConcurrentServers()
   port = glBasePort + 9

   try
      -- First server on localhost
      obj.new('netsocket', { port = port, address = '127.0.0.1', flags = 'SERVER' })

      -- Second server on different port, all interfaces
      obj.new('netsocket', { port = port + 1, address = '0.0.0.0', flags = 'SERVER' })
   except ex
      error('Failed to create concurrent servers')
   end
end
