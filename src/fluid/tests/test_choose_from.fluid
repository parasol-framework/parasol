@Test(hotpath=true) function testRepeatedEvaluation()
   -- Ensure repeated use works correctly in a loop
   results = {}
   for i in {0..10} do
      results[i] = choose i from
         0 -> 'zero'
         5 -> 'five'
         9 -> 'nine'
         else -> 'other'
      end
   end

