function testMultipleFilterLevels()
   local result = {}

   catch(function()
      catch(function()
         catch(function()
            local xml = obj.new("xml", { flags="NEW" })
            xml.acDraw()  -- Raises from C
         end,
         { ERR_Failed },  -- Wrong
         function(Exception)
            table.insert(result, "inner")
         end)
      end,
      { ERR_Init },  -- Also wrong
      function(Exception)
         table.insert(result, "middle")
      end)
   end,
   { ERR_NoAction },  -- Correct
   function(Exception)
      table.insert(result, "outer")
   end)

   assert(#result is 1 and result[0] is "outer", "Multi-filter exception failed")
end

