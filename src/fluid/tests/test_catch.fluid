function testFilterChaining()
   -- Test the specific pattern from testMissedFilter
   local status, msg = pcall(function()
      catch(function()
         local xml = obj.new("xml", { flags="NEW" })
         xml.acDraw()
      end,
      { ERR_Failed },  -- Filter for the wrong error code
