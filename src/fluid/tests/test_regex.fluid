function testMatchMethod()
   -- Simple match
   local word_regex = regex.new("(\\w+)")
   local matches = word_regex.search("hello world")
   assert(matches, "Match should succeed")
   assert(#matches is 2, "Expected two matches (hello and world)")
   assert(matches[1][1] is "hello", "Full match should be 'hello'")
   assert(matches[1][2] is "hello", "Capture should be 'hello'")
   assert(matches[2][1] is "world", "Full match should be 'world'")
   assert(matches[2][2] is "world", "Capture should be 'world'")

   -- Multiple capture groups
   local email_regex = regex.new("([^@]+)@([^.]+)\\.(.+)")
   local email_matches = email_regex.match("user@example.com")
   assert(email_matches, "Should match email")
   assert(email_matches[1] is "user@example.com", "Full match incorrect")
   assert(email_matches[2] is "user", "Username capture incorrect")
   assert(email_matches[3] is "example", "Domain capture incorrect")
   assert(email_matches[4] is "com", "TLD capture incorrect")

   -- No match case
   local no_regex = regex.new("([ABC]+)")
   assert(not no_regex.match("123 456"), "Should return nil for no match")
end

