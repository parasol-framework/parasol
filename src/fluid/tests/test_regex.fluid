function testSplitMethod()
   local comma_regex = regex.new("\\s*,\\s*")
   local split_result = comma_regex.split("apple, banana,  cherry")
   assert(#split_result is 3, "Should split into 3 parts")
   assert(split_result[1] is "apple", "First part should be 'apple'")
   assert(split_result[2] is "banana", "Second part should be 'banana'")
   assert(split_result[3] is "cherry", "Third part should be 'cherry'")

   -- Test splitting with multiple delimiters
   local multi_regex = regex.new("[,;]\\s*")
   local multi_result = multi_regex.split("a,b; c,d")
   assert(#multi_result is 4, "Should split on both comma and semicolon")
   assert(multi_result[1] is "a", "First part incorrect")
   assert(multi_result[2] is "b", "Second part incorrect")
   assert(multi_result[3] is "c", "Third part incorrect")
   assert(multi_result[4] is "d", "Fourth part incorrect")

   -- Test no split (no matches)
   local no_split_result = comma_regex.split("no delimiters here")
   assert(#no_split_result is 1, "Should return single element")
   assert(no_split_result[1] is "no delimiters here", "Should return original string")
end

