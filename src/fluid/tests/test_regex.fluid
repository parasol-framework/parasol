function testFlags()
   -- Case insensitive flag
   local icase_regex = regex.new("hello", regex.ICASE)
   assert(icase_regex.test("HELLO"), "ICASE flag should work")
   assert(icase_regex.test("Hello"), "ICASE flag should work")
   assert(icase_regex.test("hello"), "ICASE flag should work")
end

