function testSearchMethod()
   local digit_regex = regex.new("(\\d+)")
   local all_matches = digit_regex.search("abc123def456ghi")
   assert(#all_matches is 2, "Should find 2 digit sequences")
   assert(all_matches[1][1] is "123", "First match should be '123'")
   assert(all_matches[1][2] is "123", "First capture group should be '123'")
   assert(all_matches[2][1] is "456", "Second match should be '456'")
   assert(all_matches[2][2] is "456", "Second capture group should be '456'")

   -- Test with no matches
   local no_matches = digit_regex.search("hello world")
   assert(no_matches is nil, "Should return nil for no matches")
end

