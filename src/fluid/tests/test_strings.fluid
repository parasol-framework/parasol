function testHash()
   -- Basic hash (case insensitive by default)
   local hash1 = string.hash("hello")
   local hash2 = string.hash("HELLO")
   assert(hash1 is hash2, "Case insensitive hashes should match: " .. hash1 .. " != " .. hash2)

   -- Case sensitive hash
   local hash3 = string.hash("hello", true)
   local hash4 = string.hash("HELLO", true)
   assert(hash3 != hash4, "Case sensitive hashes should differ: " .. hash3 .. " is " .. hash4)

   -- Empty string
   local emptyHash = string.hash("")
   assert(emptyHash != 0, "Empty string hash should not be 0, got " .. emptyHash)

   -- Same string should produce same hash
   local consistent1 = string.hash("test")
   local consistent2 = string.hash("test")
   assert(consistent1 is consistent2, "Consistent hashing failed: " .. consistent1 .. " != " .. consistent2)

   -- Different strings should produce different hashes (highly likely)
   local diff1 = string.hash("hello")
   local diff2 = string.hash("world")
   assert(diff1 != diff2, "Different strings produced same hash (collision): " .. diff1)
end

function testEscXML()
   -- Basic XML escaping
   local escaped = string.escXML("Hello & goodbye")
   assert(escaped is "Hello &amp; goodbye", "Expected 'Hello &amp; goodbye', got '" .. escaped .. "'")

   -- Less than and greater than
   local brackets = string.escXML("<tag>content</tag>")
   assert(brackets is "&lt;tag&gt;content&lt;/tag&gt;", "Expected '&lt;tag&gt;content&lt;/tag&gt;', got '" .. brackets .. "'")

   -- All three special characters
   local all = string.escXML("A & B < C > D")
   assert(all is "A &amp; B &lt; C &gt; D", "Expected 'A &amp; B &lt; C &gt; D', got '" .. all .. "'")

   -- No special characters
   local normal = string.escXML("Hello World")
   assert(normal is "Hello World", "Expected 'Hello World', got '" .. normal .. "'")

   -- Empty string
   local empty = string.escXML("")
   assert(empty is "", "Empty string should remain empty, got '" .. empty .. "'")

   -- Nil input (should return empty string)
   local nilResult = string.escXML(nil)
   assert(nilResult is "", "Nil input should return empty string, got '" .. nilResult .. "'")

   -- Multiple ampersands (should not double-escape)
   local amps = string.escXML("A & B & C")
   assert(amps is "A &amp; B &amp; C", "Expected 'A &amp; B &amp; C', got '" .. amps .. "'")

   -- Mixed with quotes (should not escape quotes)
   local quotes = string.escXML('Hello "world" & <test>')
   assert(quotes is 'Hello "world" &amp; &lt;test&gt;', "Expected 'Hello \"world\" &amp; &lt;test&gt;', got '" .. quotes .. "'")
end

function testSub()
   local s = "hello world"

   for i=0,1000 do
      -- Basic substring (zero-indexed)
      local sub = string.sub(s, 0, 4) -- String, Start Index, End Index
      assert(sub is "hello", "Expected 'hello', got '" .. sub .. "'")

      -- Start from middle
      local mid = string.sub(s, 6, 10)
      assert(mid is "world", "Expected 'world', got '" .. mid .. "'")

      -- Negative indices (count from end)
      local neg = string.sub(s, -5, -1)
      assert(neg is "world", "Expected 'world' from negative indices, got '" .. neg .. "'")

      -- Negative start, positive end
      local mixed = string.sub(s, -5, 10)
      assert(mixed is "world", "Expected 'world' from mixed indices, got '" .. mixed .. "'")

      -- Default end (to end of string)
      local toEnd = string.sub(s, 6)
      assert(toEnd is "world", "Expected 'world' with default end, got '" .. toEnd .. "'")

      -- Single character
      local single = string.sub(s, 0, 0)
      assert(single is "h", "Expected 'h', got '" .. single .. "'")

      -- Empty range
      local empty = string.sub(s, 5, 3)
      assert(empty is "", "Expected empty string, got '" .. empty .. "'")

      -- Beyond string length
      local beyond = string.sub(s, 0, 100)
      assert(#beyond is #s, "Expected length to match original string length, got " .. #beyond)
      assert(beyond is s, "Expected full string when end exceeds length, got '" .. beyond .. "'")

      -- Empty string
      local emptyStr = string.sub("", 0, 0)
      assert(emptyStr is "", "Expected empty string, got '" .. emptyStr .. "'")
   end
end

function testSubstr()
   -- string.substr() is like string.sub() but with exclusive end index
   -- For positive indices: substr(s, start, end) extracts chars from start to end-1
   -- For negative indices: works the same as string.sub()

   local s = "hello world"
   
   for i=0,1000 do
      -- Basic usage - positive indices (exclusive end)
      local substr = string.substr(s, 0, 5) -- Indices 0,1,2,3,4 (not 5)
      assert(substr is "hello", "Expected 'hello', got '" .. substr .. "'")

      -- Verify difference from string.sub
      local sub = string.sub(s, 0, 4) -- Indices 0,1,2,3,4 (inclusive)
      assert(sub is substr, "substr(0,5) should equal sub(0,4), got sub='" .. sub .. "' substr='" .. substr .. "'")

      -- Start from middle
      local mid = string.substr(s, 6, 11) -- Indices 6,7,8,9,10 (not 11)
      assert(mid is "world", "Expected 'world', got '" .. mid .. "'")

      -- Single character (exclusive end)
      local single = string.substr(s, 0, 1) -- Only index 0
      assert(single is "h", "Expected 'h', got '" .. single .. "'")

      -- Another single character
      local singleMid = string.substr(s, 6, 7) -- Only index 6
      assert(singleMid is "w", "Expected 'w', got '" .. singleMid .. "'")

      -- Empty range (start equals end)
      local empty = string.substr(s, 5, 5) -- No characters (5 is exclusive)
      assert(empty is "", "Expected empty string for substr(5,5), got '" .. empty .. "'")

      -- Empty range (start > end)
      local emptyRev = string.substr(s, 8, 5)
      assert(emptyRev is "", "Expected empty string when start > end, got '" .. emptyRev .. "'")

      -- Negative indices - should work same as string.sub (no adjustment)
      local neg = string.substr(s, -5, -1) -- From "world" to end
      assert(neg is "world", "Expected 'world' from negative indices, got '" .. neg .. "'")

      -- Negative end to exclude last character
      local negExclude = string.substr(s, 0, -2) -- All but last char
      assert(negExclude is "hello worl", "Expected 'hello worl', got '" .. negExclude .. "'")

      -- Mix positive start, negative end
      local mixed = string.substr(s, 6, -1) -- From 'w' to end
      assert(mixed is "world", "Expected 'world' from mixed indices, got '" .. mixed .. "'")

      -- Default end (to end of string)
      local toEnd = string.substr(s, 6) -- From 'w' to end (default end = -1)
      assert(toEnd is "world", "Expected 'world' with default end, got '" .. toEnd .. "'")

      -- Beyond string length - should clamp
      local beyond = string.substr(s, 0, 100)
      assert(#beyond is #s, "Expected length to match original, got " .. #beyond)
      assert(beyond is s, "Expected full string when end exceeds length, got '" .. beyond .. "'")

      -- Empty string
      local emptyStr = string.substr("", 0, 0)
      assert(emptyStr is "", "Expected empty string, got '" .. emptyStr .. "'")

      -- Whole string with explicit indices
      local whole = string.substr(s, 0, 11) -- 0 to 10 (length is 11)
      assert(whole is s, "Expected full string with substr(0,11), got '" .. whole .. "'")

      -- Compare with string.sub for various cases
      local testStr = "ABCDEFGHIJ"

      -- Extract first 4 chars
      assert(string.substr(testStr, 0, 4) is string.sub(testStr, 0, 3), "substr(0,4) should equal sub(0,3)")

      -- Extract middle section
      assert(string.substr(testStr, 2, 6) is string.sub(testStr, 2, 5), "substr(2,6) should equal sub(2,5)")

      -- Extract last 3 chars using negative indices (should be same)
      assert(string.substr(testStr, -3, -1) is string.sub(testStr, -3, -1), "Negative indices should work the same")

      -- Zero-length with positive indices
      assert(string.substr(testStr, 3, 3) is "", "substr(3,3) should be empty")

      -- Practical use case: extract substring like JavaScript/Python
      local url = "https://example.com/path"
      local protocol = string.substr(url, 0, 5) -- "https"
      assert(protocol is "https", "Expected 'https', got '" .. protocol .. "'")
   end
end

function testByte()
   for i=0,1000 do
      -- Single character (zero-indexed)
      local b = string.byte("hello", 0)
      assert(b is 104, "Expected 104 (h), got " .. b)

      -- Multiple characters
      local b1, b2, b3 = string.byte("abc", 0, 2)
      assert(b1 is 97, "Expected 97 (a), got " .. b1)
      assert(b2 is 98, "Expected 98 (b), got " .. b2)
      assert(b3 is 99, "Expected 99 (c), got " .. b3)

      -- Default range (single character at index 0)
      local def = string.byte("hello")
      assert(def is 104, "Expected 104 (h) as default, got " .. def)

      -- Negative index (from end)
      local neg = string.byte("hello", -1)
      assert(neg is 111, "Expected 111 (o), got " .. neg)

      -- Range with negative end
      local b4, b5 = string.byte("hello", -2, -1)
      assert(b4 is 108, "Expected 108 (l), got " .. b4)
      assert(b5 is 111, "Expected 111 (o), got " .. b5)

      -- Empty range
      local empty = string.byte("hello", 5, 3)
      assert(empty is nil, "Expected nil for empty range, got " .. tostring(empty))

      -- Single character at last position
      local last = string.byte("hello", 4)
      assert(last is 111, "Expected 111 (o), got " .. last)
   end
end

function testChar()
   for i=0,1000 do
      -- Single character
      local c = string.char(65)
      assert(c is "A", "Expected 'A', got '" .. c .. "'")

      -- Multiple characters
      local multi = string.char(72, 101, 108, 108, 111)
