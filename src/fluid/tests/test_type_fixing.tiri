-- COMPILE-TIME TYPE CHECKING FOR FUNCTION RETURN TYPES
-- When a function has explicit return type annotations, the compiler can check type compatibility
-- at compile time rather than runtime.

@Test function CompileTimeMatchingReturnTypes()
   -- When function return type matches variable type, no runtime check needed
   function getNumber(): num
      return 42
   end

   local x: num = 0
   x = getNumber()  -- Types match, no BC_ISTYPE emitted
   assert(x is 42, "matching return types should work without runtime check")

   -- Multiple calls should all skip runtime check
   x = getNumber()
   x = getNumber()
   assert(x is 42, "repeated calls with matching types should work")
end

@Test function CompileTimeMismatchReturnTypes()
   -- When function return type doesn't match variable type, compile-time error
   try
      exec([[
         function getString(): str
            return "hello"
         end

         local x: num = 0
         x = getString()  -- Type mismatch: str vs num
      ]])
   success
      error("mismatched return types should cause compile-time error")
   end
end

@Test function CompileTimeAnyReturnTypeAllowed()
   -- Function returning 'any' should allow assignment to any typed variable
   function getAny(): any
      return 42
   end

   local x: num = 0
   x = getAny()  -- 'any' return type means runtime check needed
   assert(x is 42, "function returning 'any' should work with typed variable")
end

@Test function CompileTimeUnknownReturnTypeRuntimeCheck()
   -- Function without return type annotation requires runtime check
   function getValue()
      return 42
   end

   local x: num = 0
   x = getValue()  -- Unknown return type, BC_ISTYPE emitted for runtime check
   assert(x is 42, "unknown return type should use runtime check")
end

@Test function CompileTimeMultipleReturnTypesFirstOnly()
   -- Only the first return type is checked for single-value assignment
   function getNumberAndString():<num, str>
      return 42, "hello"
   end

   local x: num = 0
   x = getNumberAndString()  -- First return is num, matches
   assert(x is 42, "first return type should be used for type check")
end
