--$FLUID:Include

module({
  name="Fluid",
  copyright="Paul Manias Â© 2006-2025",
  version=1.0,
  prefix="fl",
  status="beta",
  comment="Fluid is a customised scripting language for the Script class."
},
function()
  restrict(function()
    loadFile(glPath .. 'common.fdl')
  end)

  flags("JOF", { comment="JIT behaviour options" },
     "DIAGNOSE:       Cancels aborting on error and enables deeper log tracing.",
     "LEGACY:         Use the legacy parser.",
     "TRACE_TOKENS:   Trace the emission of tokens.",
     "TRACE_EXPECT:   Enable trace expectation messages during parsing.",
     "TRACE_BOUNDARY: Enable log messages for AST boundary crossing.",
     "DUMP_BYTECODE:  Print a disassembly of bytecode instructions after parsing.",
     "PROFILE:        Use timers to profile JIT execution.")

--[[
  class('Fluid', {
    src={ 'fluid_class.cpp' }
  })
--]]

  functionNames("fl",
    "SetVariable")
end)
