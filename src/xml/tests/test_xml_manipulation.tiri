-- Comprehensive XML manipulation tests

   include 'xml'

local function printXML(XML)
   local err, str = XML.mtSerialise(0, XMF_INCLUDE_SIBLINGS)
   print(tostring(str))
end

-----------------------------------------------------------------------------------------------------------------------
-- Test InsertXML method with various insertion points

@Test function InsertXML()
   local xml = obj.new("xml", {
      statement = '<root><child1/><child2/></root>'
   })

   local rootId = xml.tags[0].id

   -- Test CHILD insertion
   local err, newId = xml.mtInsertXML(rootId, XMI_CHILD, '<inserted>At beginning</inserted>')
   assert(err is ERR_Okay, "Failed to insert as child: " .. mSys.GetErrorMsg(err))

   -- Test CHILD_END insertion
   local err, endId = xml.mtInsertXML(rootId, XMI_CHILD_END, '<inserted>At end</inserted>')
   assert(err is ERR_Okay, "Failed to insert at child end: " .. mSys.GetErrorMsg(err))

   -- Verify structure
   local children = xml.tags[0].children
   assert(#children is 4, "Expected 4 children after insertions, got " .. #children)
   assert(children[0].attribs[0].name is "inserted", "First insertion failed")
   assert(children[3].attribs[0].name is "inserted", "Last insertion failed")
end

-----------------------------------------------------------------------------------------------------------------------
-- Test InsertXML with PREV and NEXT positions

@Test function InsertXMLSiblings()
   local xml = obj.new("xml", {
      statement = '<root><child1/><child2/><child3/></root>'
   })

   local err, child2Id = xml.mtSearch("/root/child2")

   -- Insert before child2
   local err, prevId = xml.mtInsertXML(child2Id, XMI_PREV, '<before/>')
   assert(err is ERR_Okay, "Failed to insert before: " .. mSys.GetErrorMsg(err))

   -- Insert after child2
   local err, nextId = xml.mtInsertXML(child2Id, XMI_NEXT, '<after/>')
   assert(err is ERR_Okay, "Failed to insert after: " .. mSys.GetErrorMsg(err))

   -- Verify positions
   local children = xml.tags[0].children
   assert(#children is 5, "Expected 5 children after sibling insertions")
   assert(children[1].attribs[0].name is "before", "PREV insertion in wrong position")
   assert(children[3].attribs[0].name is "after", "NEXT insertion in wrong position")
end

