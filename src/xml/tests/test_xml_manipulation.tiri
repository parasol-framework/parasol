-- Test InsertXPath method

@Test function InsertXPath()
   local xml = obj.new("xml", {
      statement = '<root><section name="target"><item/></section></root>'
   })

   -- Insert using XPath
   local err, newId = xml.mtInsertXPath('/root/section[@name="target"]', XMI_CHILD, '<newitem/>')
   assert(err is ERR_Okay, "Failed to insert via XPath: " .. mSys.GetErrorMsg(err))

   -- Verify insertion
   local err, targetId = xml.mtSearch('/root/section[@name="target"]')
   assert(err is ERR_Okay, "Failed to find target section")

   local err, targetTag = xml.mtGetTag(targetId)
   assert(err is ERR_Okay, "Failed to get target tag")
   assert(#targetTag.children is 2, "Expected 2 children after XPath insertion")
end
