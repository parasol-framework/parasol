-- Test MoveTags method

@Test function MoveTags()
   -- Test XMI_CHILD - move as first child
   local xml = obj.new("xml", {
      statement = '<root><source1/><source2/><dest><existing/></dest></root>'
   })

   local err, source1Id = xml.mtSearch("/root/source1")
   local err, destId = xml.mtSearch("/root/dest")

   -- Move source1 as child of dest
   local err = xml.mtMoveTags(source1Id, 1, destId, XMI_CHILD)
   assert(err is ERR_Okay, "Failed to move tag as child: " .. mSys.GetErrorMsg(err))

   -- Verify move
   local rootChildren = xml.tags[0].children
   assert(#rootChildren is 2, "Expected 2 root children after XMI_CHILD move")

   local destChildren = rootChildren[1].children
   assert(#destChildren is 2, "Expected 2 dest children after XMI_CHILD move")
   assert(destChildren[0].attribs[0].name is "source1", "XMI_CHILD: moved tag not in correct position")
   assert(destChildren[1].attribs[0].name is "existing", "XMI_CHILD: existing child moved incorrectly")
end

@Test function MoveTagsChildEnd()
   -- Test XMI_CHILD_END - move as last child
   local xml = obj.new("xml", {
      statement = '<root><source/><dest><child1/><child2/></dest></root>'
   })

   local err, sourceId = xml.mtSearch("/root/source")
   local err, destId = xml.mtSearch("/root/dest")

   -- Move source as last child of dest
   local err = xml.mtMoveTags(sourceId, 1, destId, XMI_CHILD_END)
   assert(err is ERR_Okay, "Failed to move tag as child end: " .. mSys.GetErrorMsg(err))

   -- Verify move
   local destChildren = xml.tags[0].children[0].children
   assert(#destChildren is 3, "Expected 3 dest children after XMI_CHILD_END move")
   assert(destChildren[0].attribs[0].name is "child1", "XMI_CHILD_END: first child moved incorrectly")
   assert(destChildren[1].attribs[0].name is "child2", "XMI_CHILD_END: second child moved incorrectly")
   assert(destChildren[2].attribs[0].name is "source", "XMI_CHILD_END: moved tag not at end")
end

@Test function MoveTagsPrev()
   -- Test XMI_PREV - move as previous sibling
   local xml = obj.new("xml", {
      statement = '<root><source/><target/><other/></root>'
   })

   local err, sourceId = xml.mtSearch("/root/source")
   local err, targetId = xml.mtSearch("/root/target")

   -- Move source before target
   local err = xml.mtMoveTags(sourceId, 1, targetId, XMI_PREV)
   assert(err is ERR_Okay, "Failed to move tag as previous: " .. mSys.GetErrorMsg(err))

   -- Verify move - source should now be before target
   local rootChildren = xml.tags[0].children
   assert(#rootChildren is 3, "Expected 3 root children after XMI_PREV move")
   assert(rootChildren[0].attribs[0].name is "source", "XMI_PREV: moved tag not in correct position")
   assert(rootChildren[1].attribs[0].name is "target", "XMI_PREV: target tag moved incorrectly")
   assert(rootChildren[2].attribs[0].name is "other", "XMI_PREV: other tag moved incorrectly")
end

@Test function MoveTagsNext()
   -- Test XMI_NEXT - move as next sibling
   local xml = obj.new("xml", {
      statement = '<root><other/><target/><source/></root>'
   })

   local err, sourceId = xml.mtSearch("/root/source")
   local err, targetId = xml.mtSearch("/root/target")

   -- Move source after target
   local err = xml.mtMoveTags(sourceId, 1, targetId, XMI_NEXT)
   assert(err is ERR_Okay, "Failed to move tag as next: " .. mSys.GetErrorMsg(err))

   -- Verify move - source should now be after target
   local rootChildren = xml.tags[0].children
   assert(#rootChildren is 3, "Expected 3 root children after XMI_NEXT move")
   assert(rootChildren[0].attribs[0].name is "other", "XMI_NEXT: other tag moved incorrectly")
   assert(rootChildren[1].attribs[0].name is "target", "XMI_NEXT: target tag moved incorrectly")
   assert(rootChildren[2].attribs[0].name is "source", "XMI_NEXT: moved tag not in correct position")
end

@Test function MoveMultipleTags()
   -- Test moving multiple consecutive tags
   local xml = obj.new("xml", {
      statement = '<root><source1/><source2/><source3/><dest><existing/></dest></root>'
   })

   local err, source1Id = xml.mtSearch("/root/source1")
   local err, destId = xml.mtSearch("/root/dest")

   -- Move 3 consecutive tags starting from source1 as children of dest
   local err = xml.mtMoveTags(source1Id, 3, destId, XMI_CHILD)
   assert(err is ERR_Okay, "Failed to move multiple tags: " .. mSys.GetErrorMsg(err))

   -- Verify move
   local rootChildren = xml.tags[0].children
   assert(#rootChildren is 1, "Expected 1 root child after moving multiple tags")

   local destChildren = rootChildren[0].children
   assert(#destChildren is 4, "Expected 4 dest children after moving multiple tags")
   assert(destChildren[0].attribs[0].name is "source1", "Multiple move: first moved tag not in correct position")
   assert(destChildren[1].attribs[0].name is "source2", "Multiple move: second moved tag not in correct position")
   assert(destChildren[2].attribs[0].name is "source3", "Multiple move: third moved tag not in correct position")
   assert(destChildren[3].attribs[0].name is "existing", "Multiple move: existing child moved incorrectly")
end

