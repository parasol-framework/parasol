   return {
      tests = {
        'testAlignment',
        'testDialog',
        'testFonts',
        'testImages',
        'testLayout',
        'testLinks',
        'testLists',
        'testLogic',
        'testParagraphs',
        'testTables'
      },
      init = function(Folder)
         glDocFolder = Folder
      end,
      cleanup = function()

      end
   }
