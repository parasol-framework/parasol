-- COUNT clause should expose positional counters during iteration

function testCountProvidesPosition()
   local xml = obj.new('xml', {
      statement = '<library>' ..
                  '<book id="bk-1" price="25"/>' ..
                  '<book id="bk-2" price="55"/>' ..
                  '<book id="bk-3" price="32"/>' ..
                  '</library>'
   })

   local order = {}
   local err = xml.mtSearch('for $book in /library/book order by number($book/@price) ascending count $position return <entry pos="{$position}" id="{$book/@id}"/>',
      function(XML, TagID)
         local errPos, posValue = xml.mtGetAttrib(TagID, 'pos')
         assert(errPos is ERR_Okay, 'COUNT clause should expose generated positional attribute: ' .. mSys.GetErrorMsg(errPos))
         local errId, idValue = xml.mtGetAttrib(TagID, 'id')
         assert(errId is ERR_Okay, 'COUNT clause should maintain binding access after sorting: ' .. mSys.GetErrorMsg(errId))
         table.insert(order, posValue .. ':' .. idValue)
      end)

   assert(err is ERR_Okay, 'COUNT clause FLWOR should evaluate successfully: ' .. tostring(xml.errorMsg))
   assert(order[0] is '1:bk-1' and order[1] is '2:bk-3' and order[2] is '3:bk-2',
      'COUNT clause should align positional counters with sorted order, got "' .. table.concat(order, ',') .. '"')
end

