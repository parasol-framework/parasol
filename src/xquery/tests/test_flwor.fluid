-- GROUP BY clause should bucket items and expose grouped bindings

function testGroupByAggregatesSequences()
   local xml = obj.new('xml', {
      statement = '<library>' ..
                  '<book id="bk-1" genre="fiction" price="25"/>' ..
                  '<book id="bk-2" genre="reference" price="55"/>' ..
                  '<book id="bk-3" genre="fiction" price="32"/>' ..
                  '<book id="bk-4" genre="reference" price="26"/>' ..
                  '<book id="bk-5" genre="history" price="41"/>' ..
                  '</library>'
   })

   local groups = {}
   local err = xml.mtSearch('for $book in /library/book group by $genre := string($book/@genre) return <group genre="{$genre}" count="{count($book)}"/>',
      function(XML, TagID)
         local errGenre, genreValue = xml.mtGetAttrib(TagID, 'genre')
         assert(errGenre is ERR_Okay, 'GROUP BY clause should expose computed grouping key: ' .. mSys.GetErrorMsg(errGenre))
         local errCount, countValue = xml.mtGetAttrib(TagID, 'count')
         assert(errCount is ERR_Okay, 'GROUP BY clause should allow aggregated count output: ' .. mSys.GetErrorMsg(errCount))
         groups[genreValue] = tonumber(countValue)
      end)

   assert(err is ERR_Okay, 'GROUP BY clause FLWOR should evaluate successfully: ' .. tostring(xml.errorMsg))
   assert(groups['fiction'] is 2, 'Fiction group should contain two members, got ' .. tostring(groups['fiction']))
   assert(groups['reference'] is 2, 'Reference group should contain two members, got ' .. tostring(groups['reference']))
   assert(groups['history'] is 1, 'History group should contain one member, got ' .. tostring(groups['history']))
end

-----------------------------------------------------------------------------------------------------------------------
-- GROUP BY clause should maintain access to grouped sequences for derived output

function testGroupBySequenceAccess()
   local xml = obj.new('xml', {
      statement = '<library>' ..
                  '<book id="bk-1" genre="fiction" price="25"/>' ..
                  '<book id="bk-2" genre="fiction" price="31"/>' ..
                  '<book id="bk-3" genre="history" price="41"/>' ..
                  '</library>'
   })

   local members = {}
   local err = xml.mtSearch('for $book in /library/book group by $genre := $book/@genre return <group genre="{$genre}" members="{string-join(for $member in $book return string($member/@id), ",")}"/>',
      function(XML, TagID)
         local errGenre, genreValue = xml.mtGetAttrib(TagID, 'genre')
         assert(errGenre is ERR_Okay, 'GROUP BY sequence access should expose genre attribute: ' .. mSys.GetErrorMsg(errGenre))
         local errMembers, memberList = xml.mtGetAttrib(TagID, 'members')
         assert(errMembers is ERR_Okay, 'GROUP BY sequence access should expose concatenated member identifiers: ' .. mSys.GetErrorMsg(errMembers))
         msg("Received callback: " .. genreValue .. ' ' .. memberList);
         members[genreValue] = memberList
      end)

   assert(err is ERR_Okay, 'GROUP BY sequence FLWOR should evaluate successfully: ' .. tostring(xml.errorMsg))
   assert(members['fiction'] is 'bk-1,bk-2', 'Fiction group should expose concatenated identifiers, got ' .. tostring(members['fiction']))
   assert(members['history'] is 'bk-3', 'History group should expose single identifier, got ' .. tostring(members['history']))
end

