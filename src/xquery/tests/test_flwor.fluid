-- WHERE clause should filter bound sequences using boolean predicates

function testWhereFiltersNodes()
   local xml = obj.new('xml', {
      statement = '<library>' ..
                  '<book id="bk-1" genre="fiction" price="25"/>' ..
                  '<book id="bk-2" genre="reference" price="55"/>' ..
                  '<book id="bk-3" genre="fiction" price="32"/>' ..
                  '<book id="bk-4" genre="history" price="41"/>' ..
                  '</library>'
   })

   local filtered = {}
   local err = xml.mtSearch('for $book in /library/book where number($book/@price) < 40 return $book',
      function(XML, TagID)
         local errAttr, idValue = xml.mtGetAttrib(TagID, 'id')
         assert(errAttr is ERR_Okay, 'WHERE clause should preserve attribute access: ' .. mSys.GetErrorMsg(errAttr))
         table.insert(filtered, idValue)
      end)

   assert(err is ERR_Okay, 'WHERE clause FLWOR should evaluate successfully: ' .. tostring(xml.errorMsg))
   table.sort(filtered)
   assert(#filtered is 2 and filtered[0] is 'bk-1' and filtered[1] is 'bk-3',
      'Filtered identifiers should match price predicate, got ' .. table.concat(filtered, ','))
end

