-- Nested FOR product should expand correctly and expose both bindings

function testNestedForProduct()
   local xml = obj.new('xml', {
      statement = '<root>' ..
                  '<a id="a1"/><a id="a2"/>' ..
                  '<b id="b1"/><b id="b2"/>' ..
                  '</root>'
   })

   local pairs = {}
   local err = xml.mtSearch('for $a in /root/a for $b in /root/b return <p a="{$a/@id}" b="{$b/@id}"/>',
      function(XML, TagID)
         local errA, ida = xml.mtGetAttrib(TagID, 'a')
         local errB, idb = xml.mtGetAttrib(TagID, 'b')
         assert(errA is ERR_Okay and errB is ERR_Okay, 'Nested FOR should expose both bindings')
         table.insert(pairs, ida .. '-' .. idb)
      end)

   assert(err is ERR_Okay, 'Nested FOR FLWOR should evaluate successfully: ' .. tostring(xml.errorMsg))
   assert(#pairs is 4, 'Nested FOR product should produce four pairs, got ' .. tostring(#pairs))
end

