   -- Test finding all elements with 'or' attribute
   totalFound = 0
   err, index, taglist = glXML.mtFindTag("//*[@or]", function(XML, TagID, Attrib)
      totalFound = totalFound + 1
   end)
   assert(totalFound == 1, "Expected 1 element with 'or' attribute, got " .. totalFound)
end

