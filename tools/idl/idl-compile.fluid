function platform(Platform, Function)
   if (Platform:lower() is 'windows') then
      Function()
   elseif (Platform:lower() is 'linux') then
      Function()
   elseif (Platform:lower() is 'x11') then
      Function()
   else
      error("Unrecognised platform '" .. Platform .. "'")
   end
end

