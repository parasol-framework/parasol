global function str_to_bytes(String:str):str
   local list
   String = String:replace("\\n", string.char(10))
   for i = 0, #String - 1 do
      if list then
         list ..= string.format(',%d', String:byte(i))
      else
         list = string.format('%d', String:byte(i))
      end
   end
   return list
end

