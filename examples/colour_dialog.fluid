
   require "gui/colourdialog"

   mSys = mod.load("core")

   gui.dialog.colour({
      modal = true,
      colour = "255,0,0",
      feedback = function(Colour)
         mSys.SendMessage(0, MSGID_QUIT)

         if (not Colour) then
            print("Dialog was cancelled.")
            return
         end

         print("The user selected colour is " .. Colour)
      end
   })

   processMessages(-1)
