<?xml version="1.0"?>
<!-- NB: The values in this file are processed by Fluid's gui module -->

<fonts>
  <!-- Use percentages for scalable sizes, where 100% is equivalent to the value of "/interface/@fontsize" -->

  <font name="default"  face="Noto Sans,Source Sans 3" size="100%" colour="0,0,0"/>
  <font name="window"   face="Noto Sans,Source Sans 3" size="100%" colour="0,0,0"/> <!-- For text that is not inside a widget -->
  <font name="button"   face="Noto Sans,Source Sans 3" size="100%" colour="0,0,0"/> <!-- Text inside buttons -->
  <font name="icon"     face="Noto Sans,Source Sans 3" size="100%" colour="255,255,255"/> <!-- Text at the bottom of icons -->
  <font name="menu"     face="Noto Sans,Source Sans 3" size="100%" colour="255,255,255" highlight="255,255,255"/> <!-- Menu item text -->
  <font name="titlebar" face="Noto Sans" size="100%" colour="255,255,255"/> <!-- Title bar text (in standalone OS mode) -->
  <font name="small"    face="Tiny" size="6"/> <!-- Recommended text for small sizes -->
  <font name="large"    face="Noto Sans,Source Sans 3" size="130%"/> <!-- Recommended text for headers -->
  <font name="widget"   face="Noto Sans,Source Sans 3" size="11" colour="255,255,255"/> <!-- Text inside widgets (e.g. combobox) -->
  <font name="label"    face="Noto Sans,Source Sans 3:11:bold" size="11" colour="0,0,0"/> <!-- Text for labels and outside widgets -->
</fonts>

<colours
  shadow="0,0,0,100" highlight="255,255,255,150"
  colour="220,220,220"
  window="220,220,220"
  widgetText="255,255,255" widgetBkgd="0,0,0,100" widgetStroke="255,255,255,60"
  widgetStrokeFocus="255,255,255,160" widgetStrokeDisabled="255,255,255,60"
  button="230,230,230" buttonclick="200,200,200"
  menubar="190,190,190" menu="240,240,240"
  border="#909090" menuborder="200,200,200"
  desktop="160,160,160" recess="160,160,160"
  background="255,255,255"
  texthighlight="#e0e0f0"
  boxedText="255,255,255"
  windowText="0,0,0"/>

<interface
  inputborder="1" outputborder="1"
  widgetmargin="5" widgetgap="6"
  textborder="1" fontsize="11"
  slidersize="16" scrollsize="18"
  scrollopacity="100"
  iconratio="7%" icontheme="Default" iconsize="0"/>

